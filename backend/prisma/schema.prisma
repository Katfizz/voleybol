datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --------------------------------------

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password_hash String
  role          Role
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt // Se actualiza en cada modificación

  profile        PlayerProfile? // Relation to player profile
  announcements  Announcement[] // Relation to announcements authored by this user

  // Relación muchos a muchos: Un coach puede gestionar varias categorías
  managedCategories Category[] @relation("CoachToCategory")
  recordedAttendances Attendance[] @relation("RecordedBy")
  updatedStatistics Statistic[] @relation("StatUpdatedBy")

  @@map("users")
}

model PlayerProfile {
  id                  Int       @id @default(autoincrement())
  user                User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id             Int       @unique
  full_name           String
  birth_date          DateTime? @db.Date
  position            String?
  contact_data        Json? // contact_data
  representative_data Json? // parents_data
  created_at          DateTime  @default(now())
  updated_at          DateTime  @updatedAt

  // Relación muchos a muchos: Un jugador puede estar en varias categorías
  categories Category[] @relation("PlayerProfileToCategory")

  attendances Attendance[] // Relation to attendances
  stats       Statistic[]  // Relation to statistics

  @@map("player_profiles")
}

model Announcement {
  id         Int      @id @default(autoincrement())
  author     User     @relation(fields: [author_id], references: [id])
  author_id  Int
  title      String
  content    String
  created_at DateTime @default(now())

  @@map("announcements")
}

model Event {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  type        EventType // Enum: MATCH, PRACTICE, TOURNAMENT
  date_time   DateTime
  location    String?
  description String?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  // Relaciones
  categories Category[] @relation("EventToCategory")
  matches    Match[]
  practice   Practice?

  attendances Attendance[] // Relation to attendances

  @@map("events")
}

model Attendance {
  id                Int           @id @default(autoincrement())
  date              DateTime      @db.Date
  player_profile    PlayerProfile @relation(fields: [player_profile_id], references: [id])
  player_profile_id Int
  event             Event         @relation(fields: [event_id], references: [id])
  event_id          Int
  status            AttendanceStatus
  notes             String?
  recorded_by_id    Int?
  recorded_by       User?         @relation("RecordedBy", fields: [recorded_by_id], references: [id])

  @@unique([player_profile_id, event_id, date])
  @@map("attendances")
}

model Statistic {
  id                Int           @id @default(autoincrement())
  player_profile_id Int
  player_profile    PlayerProfile @relation(fields: [player_profile_id], references: [id], onDelete: Cascade)
  match_id          Int
  match             Match         @relation(fields: [match_id], references: [id], onDelete: Cascade)

  points  Int @default(0)
  kills   Int @default(0)
  errors  Int @default(0)
  aces    Int @default(0)
  blocks  Int @default(0)
  assists Int @default(0)
  digs    Int @default(0)

  last_updated_by_id Int?
  last_updated_by    User? @relation("StatUpdatedBy", fields: [last_updated_by_id], references: [id])

  @@unique([player_profile_id, match_id])
  @@map("player_stats")
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?

  // Relaciones muchos a muchos
  playerProfiles PlayerProfile[] @relation("PlayerProfileToCategory")
  coaches        User[]          @relation("CoachToCategory")
  events         Event[]         @relation("EventToCategory")

  // Relaciones para partidos
  homeMatches Match[] @relation("HomeMatches")
  awayMatches Match[] @relation("AwayMatches")
  wonMatches  Match[] @relation("WonMatches")
  wonSets     Set[]   @relation("WonSets")

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  @@map("categories")
}

// --- Modelos Adicionales para Eventos ---

model Practice {
  event_id  Int   @id
  event     Event @relation(fields: [event_id], references: [id], onDelete: Cascade)
  objective String?
  notes     String?
  drills    Json?

  @@map("practices")
}

model Match {
  id Int @id @default(autoincrement())

  event_id Int
  event    Event @relation(fields: [event_id], references: [id], onDelete: Cascade)

  home_category_id Int
  homeCategory     Category @relation("HomeMatches", fields: [home_category_id], references: [id])
  away_category_id Int
  awayCategory     Category @relation("AwayMatches", fields: [away_category_id], references: [id])

  home_sets_won Int @default(0)
  away_sets_won Int @default(0)

  winner_category_id Int?
  winnerCategory     Category? @relation("WonMatches", fields: [winner_category_id], references: [id])

  sets         Set[]
  player_stats Statistic[]

  @@map("matches")
}

model Set {
  id         Int   @id @default(autoincrement())
  match_id   Int
  match      Match @relation(fields: [match_id], references: [id], onDelete: Cascade)
  set_number Int

  home_score Int
  away_score Int

  winner_category_id Int?
  winnerCategory     Category? @relation("WonSets", fields: [winner_category_id], references: [id])

  @@unique([match_id, set_number])
  @@map("sets")
}

// --- Enums ---

enum Role {
  ADMIN
  COACH
  PLAYER
}

enum EventType {
  MATCH
  PRACTICE
  TOURNAMENT
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  EXCUSED
}